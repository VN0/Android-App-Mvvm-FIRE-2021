<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/myList_foto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#C6FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/myList_titlle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo"
        android:autoSizeTextType="uniform"
        android:textSize="18sp"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toRightOf="@+id/myList_foto"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/myList_band"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="banda"
        android:layout_marginLeft="12dp"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@+id/myList_foto"
        app:layout_constraintBottom_toBottomOf="@+id/myList_titlle" />

</androidx.constraintlayout.widget.ConstraintLayout>